#!/usr/bin/env bash

# pkgsrc can compile www/shibboleth-sp; but the version it compiles is configured to run
# as root -- so pkgsrc is used to get all the dependencies; and then it is recompiled
# again setting a prefix

set -eu

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )" # http://stackoverflow.com/questions/59895
. "$DIR/setenv.sh"

cd $DIR

if [ ! -e "$HOME/pkgsrc/distfiles/shibboleth-sp-2.4.3.tar.gz" ]; then
  ./pmake www/shibboleth-sp
  pkg_delete shibboleth-sp-2.4.3nb2
fi

if [ ! -e "$HOME/pkgsrc/distfiles/shibboleth-sp-2.4.3.tar.gz" ]; then
  echo "must have upgraded pkgsrc..., now this scripts needs updating"
  exit 1
fi

shibdir="$HOME/servers/shibboleth"
mkdir -p $shibdir
cd $shibdir

tar zxf "$HOME/pkgsrc/distfiles/shibboleth-sp-2.4.3.tar.gz"
cd shibboleth-2.4.3
./configure --prefix=$shibdir --with-xmltooling=$HOME/pkg
make install

echo "before you run apache; set these
  export SHIBSP_PREFIX=$HOME/servers/shibboleth
  export LD_LIBRARY_PATH=$HOME/servers/shibboleth/lib
  UseCanonicalName On
  ServerName app.example.org:443
  also Include a copy of $HOME/servers/shibboleth/etc/shibboleth/apache22.config 
"

